
@{
    Layout = null;
}

<!DOCTYPE html>
<html dir=ltr>
<head>
    <meta charset="utf-8" />
    <title>Зарегистрироваться</title>
    <meta name="viewport" content="initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <link rel="icon" href="~/Content/images/favicon.ico" type="image/x-icon">
    @Styles.Render("~/Content/css/signup")
</head>
<body ng-app="app" ng-controller="RegisterController as controller">
    <div class="logo"></div>

    <div ng-show="controller.displayErrorMessage" class="errors">
        <div ng-bind="controller.errorMessage" role="alert" class="message"></div>
    </div>

    <h4 class="branding signup">
        Зарегистрируйтесь бесплатно
    </h4>

    <div class="card signup">
        <form ng-submit="controller.register()" class="auth-form signup" autocomplete="off">

            <div class="row name">
                <span class="icon person">
                    <svg width="20px" height="22px" viewBox="0 0 20 22" version="1.1" xmlns="http://www.w3.org/2000/svg">
                        <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                            <g transform="translate(-249.000000, -277.000000)" stroke-linecap="round" stroke="#2B88D9" stroke-linejoin="round">
                                <g transform="translate(231.000000, 238.000000)">
                                    <g transform="translate(0.000000, 20.000000)">
                                        <g transform="translate(0.000000, 20.000000)">
                                            <g>
                                                <path d="M25.2307692,13.3333333 C25.0036923,13.552 24.7212308,13.708 24.4110769,13.788 L21.3178462,14.5826667 C20.3195385,14.8386667 19.5510769,15.6093333 19.3281538,16.5813333 L19,18 C19,18 21.0755385,20 28,20 C34.9230769,20 37,18 37,18 L36.6870769,16.6586667 C36.4655385,15.7106667 35.7261538,14.9533333 34.7555385,14.6826667 L31.5653846,13.792 C31.2704615,13.7093333 31.0018462,13.5573333 30.7844615,13.348 L30.7692308,13.3333333 L25.2307692,13.3333333 Z M32.8461538,4.66666667 C32.8461538,2.08933333 30.6764615,0 28,0 C25.3235385,0 23.1538462,2.08933333 23.1538462,4.66666667 C23.1538462,7.948 25.1836923,12 28,12 C30.7664615,12 32.8461538,7.948 32.8461538,4.66666667 L32.8461538,4.66666667 Z M30.0769231,2.66666667 C29.422,3.29733333 28.8266154,4 27.3076923,4 C25.2321538,4 22.9032308,4.83733333 23.5346154,7.25866667"></path>
                                            </g>
                                        </g>
                                    </g>
                                </g>
                            </g>
                        </g>
                    </svg>
                </span>
                <input ng-model="controller.newAccount.name" type="text" name="name" required autofocus
                        placeholder="Имя" title="Введите свое полное имя." />
            </div>

            <div class="row email">
                <span class="icon email">
                    <svg width="21px" height="18px" viewBox="0 0 21 18" version="1.1" xmlns="http://www.w3.org/2000/svg">
                        <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                            <g transform="translate(-248.000000, -339.000000)" stroke-linecap="round" stroke="#2B88D9" stroke-linejoin="round">
                                <g transform="translate(231.000000, 238.000000)">
                                    <g transform="translate(0.000000, 20.000000)">
                                        <g transform="translate(0.000000, 20.000000)">
                                            <g transform="translate(0.000000, 60.000000)">
                                                <path d="M37,4.46153846 C37,3.10153846 35.8663333,2 34.4666667,2 L20.5333333,2 C19.1336667,2 18,3.10153846 18,4.46153846 L18,15.5384615 C18,16.8984615 19.1336667,18 20.5333333,18 L34.4666667,18 C35.8663333,18 37,16.8984615 37,15.5384615 L37,4.46153846 L37,4.46153846 Z M20.5333333,4.46153846 L27.5,11.2307692 L34.4666667,4.46153846"></path>
                                            </g>
                                        </g>
                                    </g>
                                </g>
                            </g>
                        </g>
                    </svg>
                </span>
                <input ng-model="controller.newAccount.email" type="email" name="email" required placeholder="Электронная почта"
                        title="Введите действительный адрес электронной почты." />
            </div>

            <div class="row password">
                <span class="icon padlock">
                    <svg width="21px" height="25px" viewBox="0 0 21 25" version="1.1" xmlns="http://www.w3.org/2000/svg">
                        <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                            <g transform="translate(-247.000000, -396.000000)" stroke-linecap="round" stroke="#2B88D9" stroke-linejoin="round">
                                <g transform="translate(231.000000, 238.000000)">
                                    <g transform="translate(0.000000, 20.000000)">
                                        <g transform="translate(0.000000, 20.000000)">
                                            <g transform="translate(0.000000, 119.000000)">
                                                <path d="M36,12.9375 C36,12.144 35.3452308,11.5 34.5384615,11.5 L18.4615385,11.5 C17.6547692,11.5 17,12.144 17,12.9375 L17,21.5625 C17,22.356 17.6547692,23 18.4615385,23 L34.5384615,23 C35.3452308,23 36,22.356 36,21.5625 L36,12.9375 L36,12.9375 Z M19.9230769,11.5 L19.9230769,6.46875 C19.9230769,2.8965625 22.8680769,0 26.5,0 C30.1319231,0 33.0769231,2.8965625 33.0769231,6.46875 L33.0769231,11.5 L19.9230769,11.5 Z M22.8461538,8.625 L22.8461538,6.46875 C22.8461538,4.4835625 24.4816154,2.875 26.5,2.875 C28.5183846,2.875 30.1538462,4.4835625 30.1538462,6.46875 L30.1538462,8.625"></path>
                                            </g>
                                        </g>
                                    </g>
                                </g>
                            </g>
                        </g>
                    </svg>
                </span>
                <input ng-model="controller.newAccount.password" type="password" name="password" required placeholder="Пароль"
                        title="Введите пароль." />
            </div>

            <div class="row submit">
                <input type="submit" class="button big blue" value="Создать учетную запись" />
            </div>
        </form>

        <span class="link login">
            Уже зарегистрированы?
            @Html.ActionLink("Вход", "Login", "Account")
        </span>
    </div>

    @Scripts.Render("~/bundles/webapp")
    @Scripts.Render("~/bundles/angular-oauth")
    @Scripts.Render("~/bundles/appScripts")
</body>
</html>